{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "pluginLocations": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "_inspector": {
              "type": "object",
              "legend": "Inspector",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "default": true,
                  "title": "Is enabled",
                  "inputType": "Checkbox",
                  "help": "Enable Inspector globally"
                },
                "_disableOnTouch": {
                  "type": "boolean",
                  "default": false,
                  "title": "Disable on touch",
                  "inputType": "Checkbox",
                  "help": "Disable Inspector on touch devices"
                },
                "_tracUrl": {
                  "type": "string",
                  "default": "",
                  "title": "Trac URL",
                  "inputType": "Text",
                  "help": "Enter a URL to make Inspector link to a specific Trac"
                },
                "tracSummaryPrompt": {
                  "type": "string",
                  "default": "",
                  "title": "Trac Summary Prompt",
                  "inputType": "Text",
                  "help": "Prompt text to be included in the Trac 'summary' field e.g. 'Please enter a summary here'"
                },
                "_elementsToInspect": {
                  "type": "array",
                  "default": [
                    "menu",
                    "page",
                    "article",
                    "block",
                    "component"
                  ],
                  "title": "Elements to inspect",
                  "inputType": "List",
                  "help": "List the rendered views which should be inspectable (default: menu, page, article, block, component)"
                }
              }
            }
          }
        }
      }
    }
  }
}
